{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edit User</h1>

    {{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.currentPassword) }}
    {{ form_row(form.newPassword) }}
    {{ form_row(form.confirmNewPassword) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
{% endblock %}
